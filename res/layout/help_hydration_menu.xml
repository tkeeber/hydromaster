<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingTop="15dp" >

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/hydration_menu_help_title"
            android:textColor="@color/black" style="@style/Text.Help.Title"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingTop="10dp" android:paddingRight="5dp">

            <ImageView
                android:id="@+id/image_hydrate_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/menu_hydrate_small" />

            <TextView
                android:id="@+id/text_hydrate_help"
                style="@style/Text.About"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/image_hydrate_icon"
                android:text="@string/help_hydrate_menu"
                android:textColor="@color/black" android:layout_marginLeft="5dp">
            </TextView>

            <ImageView
                android:id="@+id/image_hydrate_factors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_hydrate_icon"
                android:src="@drawable/menu_hydrate_factors_small" android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/text_hydrate_factors_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/image_hydrate_factors"
                android:layout_toRightOf="@+id/image_hydrate_factors"
                android:text="@string/help_hydrate_factors_menu"
                android:textColor="@color/black" android:layout_marginLeft="5dp" style="@style/Text.About"/>

            <ImageView
                android:id="@+id/image_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_hydrate_factors"
                android:src="@drawable/menu_summary_small" android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/text_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/image_summary"
                android:layout_toRightOf="@+id/image_summary"
                android:text="@string/help_summary_menu"
                android:textColor="@color/black" android:layout_marginLeft="5dp" style="@style/Text.About"/>

            <ImageView
                android:id="@+id/image_track"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_summary"
                android:src="@drawable/menu_track_small" android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/text_track"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/text_summary"
                android:layout_alignTop="@+id/image_track"
                android:text="@string/help_track_menu"
                android:textColor="@color/black" android:layout_marginLeft="5dp" style="@style/Text.About"/>
            
             <ImageView
                android:id="@+id/image_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_track"
                android:src="@drawable/menu_settings_small" android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/text_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/image_settings"
                android:text="@string/help_settings_menu"
               	android:layout_toRightOf="@+id/image_settings"
                android:textColor="@color/black" android:layout_marginLeft="5dp" style="@style/Text.About"/>
            
             <ImageView
                android:id="@+id/image_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_settings"
                android:src="@drawable/menu_information_small" android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/text_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/image_information"
                android:text="@string/help_information_menu"
               	android:layout_toRightOf="@+id/image_information"
                android:textColor="@color/black" android:layout_marginLeft="5dp" style="@style/Text.About"/>
        </RelativeLayout>

        <Button
            android:id="@+id/closeButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_white_def"
            android:text="@string/close"
            android:textColor="@color/black" />
    </LinearLayout>

</ScrollView>