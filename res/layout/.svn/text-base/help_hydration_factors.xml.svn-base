            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingTop="15dp" >

              <TextView
                android:id="@+id/TextView01"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/hydration_factors_help_title"
                android:textColor="@color/black" style="@style/Text.Help.Title">
            </TextView>
            
            <TextView
                android:id="@+id/TextView01"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/hydration_factors_help_intro"
                android:textColor="@color/black" >
            </TextView>
            
                <TextView
                android:id="@+id/TextView01"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/hydration_factors_help_intro_2"
                android:textColor="@color/black" >
            </TextView>
        </LinearLayout>

        <TextView
            android:id="@+id/text_hydrate_help_1"
