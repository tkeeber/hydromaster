<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BulletPoint">
        <item name="android:text">\u2022</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
   
    <style name="Button">
    </style> 
    
    <style name="Text">
    </style>
    
    <style name="Text.Loading">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    
     <style name="Text.HydrationHeader">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/ihydration_blue</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="Text.HydrationAlarm">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    
      <style name="Text.HydrationFactorsHeadings">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    
    
    <style name="Text.HydrationFactorsOptions">
        <item name="android:padding">5px</item>
    </style>
    
    <style name="Text.WordType">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    
    <style name="Text.Options">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    
     <style name="Text.Header">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    
    <style name="Text.Definition">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
      
     <style name="Text.Introduction">
     	 <item name="android:textSize">13sp</item>
        <item name="android:textColor">@android:color/black</item>
     </style>
          
    <style name="Button.MainOptions">
        <item name="android:gravity">left</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:width">150dp</item>
    </style>  
    
    <style name="Text.Help">
        <item name="android:textColor">@android:color/black</item>
    </style> 
    
    <style name="Text.Help.Title">
    	<item name="android:textSize">18sp</item>
    </style> 
    
     <style name="Text.About">
        <item name="android:textColor">@android:color/black</item>
    	<item name="android:textSize">16sp</item>
    </style>  
    
    
    <style name="Dialog" parent="@android:style/Theme.Dialog">
    	<item name="android:buttonStyle">@style/Button</item>
    	<item name="android:windowIsFloating">true</item>
    </style>
    
    <style name="Button">
    	<item name="android:textSize">15sp</item>
    	<item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button_white_def</item>
        <item name="android:textColor">@color/text_button</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
    
    <style name="StartupDialog" parent="android:Theme.Dialog">
                <item name="android:windowAnimationStyle">@null</item>
    </style>
    
</resources>